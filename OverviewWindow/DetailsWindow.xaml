<Window x:Class="OverviewWindow.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverviewWindow"
        mc:Ignorable="d"
        Title="The dept book" Height="350" Width="400">
    <Grid>
        <TextBox 
            x:Name="txt_Title" 
            HorizontalAlignment="Left" 
            Height="23" Margin="5,10,0,0" 
            TextWrapping="Wrap" 
            Text="Deptor/Creditor" VerticalAlignment="Top" Width="120"/>

        <ListView Margin="5,35,0,33.8" Name="lv_overview" Width="379" HorizontalAlignment="Left">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Beskrivelse" DisplayMemberBinding="{Binding Path=ModelName}"/>
                        <GridViewColumn Header="Beløb"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btn_details" Content="Tilbage" HorizontalAlignment="Left" Margin="309,292,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
